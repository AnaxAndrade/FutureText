<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText android:id="@+id/get_recipients"
        android:layout_weight="0.33"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:hint="@string/edit_recipient"
        android:singleLine="true"
        android:nextFocusDown="@+id/get_date_and_time"/>
    <EditText android:id="@+id/get_date_and_time"
        android:layout_weight="0.33"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:hint="@string/edit_dateTime"
        android:singleLine="true"
        android:nextFocusDown="@+id/get_message"/>
    <EditText android:id="@+id/get_message"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:hint="@string/edit_message"
        android:nextFocusDown="@+id/sendLater"/>
    <Button android:id="@+id/sendNow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_sendNow"
        android:onClick="sendMessage" />
    <Button android:id="@+id/sendLater"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_sendLater"
        android:onClick="sendDelayedMessage"/>
</LinearLayout>
